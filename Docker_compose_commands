#Instaling docker-compose
sudo apt-get remove docker-compose
sudo curl -L "https://github.com/docker/compose/releases/download/1.23.2/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
sudo chmod +x /usr/local/bin/docker-compose
sudo ln -s /usr/local/bin/docker-compose /usr/bin/docker-compose

#if you want to remove docker compose
apt-get remove docker-compose OR sudo rm /usr/local/bin/docker-compose

Docker-compose up :- docker run image
docker-compose up --build :- Build docker file in current working directory and docker run image
docker-compose up -d
docker-compose down
docker-compose ps #run this command in the directory where docker-compose.yml file stays
